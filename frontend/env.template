# ===================================================================
# KOSPI Fear & Greed Index - Frontend Environment Variables
# ===================================================================
# Copy this file to .env in the frontend directory
# Frontend environment variables must be prefixed with VITE_ to be accessible

# ===================================================================
# API CONFIGURATION
# ===================================================================
# Backend API base URL for frontend requests
VITE_API_BASE_URL=http://localhost:3000/api

# WebSocket URL for real-time updates (if implemented)
VITE_WS_URL=ws://localhost:3000

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
# Application environment
VITE_APP_ENV=development

# Application title and metadata
VITE_APP_TITLE=KOSPI Fear & Greed Index
VITE_APP_DESCRIPTION=KOSPI 시장의 투자자 심리를 종합적으로 분석하는 Fear & Greed Index

# Version information (automatically set by build process, but can override)
VITE_APP_VERSION=1.0.0

# ===================================================================
# GOOGLE SERVICES (Optional)
# ===================================================================
# Google AdSense Publisher ID (for monetization)
VITE_GOOGLE_ADSENSE_CLIENT=ca-pub-xxxxxxxxxxxxxxxxx

# Google Analytics Measurement ID (for tracking)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ===================================================================
# FEATURE FLAGS
# ===================================================================
# Enable/disable specific features in development
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ADSENSE=false
VITE_ENABLE_PWA=true
VITE_ENABLE_DARK_MODE=true

# ===================================================================
# DEVELOPMENT SETTINGS
# ===================================================================
# Show debug information in console
VITE_DEBUG_MODE=true

# Mock API responses (for development without backend)
VITE_MOCK_API=false

# Enable hot module replacement
VITE_HMR=true

# ===================================================================
# API ENDPOINTS CONFIGURATION
# ===================================================================
# If you need to override specific API endpoints
VITE_FEAR_GREED_ENDPOINT=/api/feargreed
VITE_MARKET_DATA_ENDPOINT=/api/market
VITE_DART_DATA_ENDPOINT=/api/dart

# ===================================================================
# CHART CONFIGURATION
# ===================================================================
# Default chart theme
VITE_CHART_THEME=light

# Chart update interval (milliseconds)
VITE_CHART_UPDATE_INTERVAL=30000

# ===================================================================
# LOCALIZATION
# ===================================================================
# Default language
VITE_DEFAULT_LOCALE=ko-KR

# Available locales
VITE_AVAILABLE_LOCALES=ko-KR,en-US

# ===================================================================
# SOCIAL SHARING
# ===================================================================
# Social media sharing configuration
VITE_SITE_URL=https://kospi-feargreed.com
VITE_TWITTER_HANDLE=@kospi_fg
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# ===================================================================
# PERFORMANCE MONITORING (Optional)
# ===================================================================
# Sentry DSN for error tracking
VITE_SENTRY_DSN=your_sentry_dsn_here

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
