{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Frontend: Vite Dev",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Backend: Dev (nodemon)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Backend: Test (jest)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "test"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Backend: Start Scheduler",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start:scheduler"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Backend: Collect Data (Manual)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:data"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Backend: Collect Historical Data",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:historical"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Test Collector",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "test:dart"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Show Help",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart", "--", "--help"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Collect Today (Dry Run)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart", "--", "today", "--dry-run"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Collect Yesterday (Dry Run)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart", "--", "yesterday", "--dry-run"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Collect Last Business Day (Dry Run)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart", "--", "last-business", "--dry-run"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Collect Custom Date (Dry Run)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart", "--", "${input:customDate}", "--dry-run"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Collect Today (Save to DB)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart", "--", "today"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Collect Yesterday (Save to DB)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart", "--", "yesterday"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Collect Custom Date (Save to DB)",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart", "--", "${input:customDate}"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Collect Daily Data",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart-daily"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Collect Financial Data",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart-financial"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Collect Company Data",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "collect:dart-companies"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Debug Collector (Direct)",
            "program": "${workspaceFolder}/backend/src/tests/unit/collectors/dartCollectorTest.ts",
            "runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/backend/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "DART: Interactive Debugger",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["ts-node", "-r", "tsconfig-paths/register", "--inspect", "src/collectors/regulatory/dartCollector.ts"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/backend/.env",
            "stopOnEntry": false,
            "restart": true
        }
    ],
    "inputs": [
        {
            "id": "customDate",
            "description": "Enter date for DART collection (YYYY-MM-DD, today, yesterday, last-business, last-week)",
            "default": "today",
            "type": "promptString"
        }
    ]
}