# ===================================================================
# KOSPI Fear & Greed Index - Backend Environment Variables
# ===================================================================
# Copy this file to .env in the backend directory
# Fill in your actual values - never commit .env to version control

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
# Local PostgreSQL database
DATABASE_URL=postgresql://fg_user:your_password@localhost:5432/fg_index_dev
DATABASE_NAME=fg_index_dev
DATABASE_USER=fg_user
DATABASE_PASSWORD=your_secure_password

# Database connection pool settings
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000

# ===================================================================
# CACHE CONFIGURATION
# ===================================================================
# Local Redis instance (optional)
REDIS_URL=redis://:your_redis_password@localhost:6379/0
REDIS_PASSWORD=your_redis_password

# ===================================================================
# SECURITY CONFIGURATION
# ===================================================================
# JWT secret for authentication (minimum 32 characters)
JWT_SECRET=your_jwt_secret_minimum_32_characters_long

# Admin credentials for protected routes
ADMIN_PASSWORD=your_secure_admin_password

# ===================================================================
# KOREAN FINANCIAL DATA APIs
# ===================================================================
# Korea Investment & Securities API
KIS_API_KEY=your_korea_investment_api_key
KIS_API_SECRET=your_korea_investment_api_secret

# Bank of Korea Economic Statistics API
BOK_API_KEY=your_bank_of_korea_api_key

# DART (Data Analysis, Retrieval and Transfer System) API - Required
DART_API_KEY=your_dart_api_key

# ===================================================================
# EXTERNAL CRYPTOCURRENCY APIs (Optional)
# ===================================================================
# Upbit Exchange API (for crypto sentiment data)
UPBIT_ACCESS_KEY=your_upbit_access_key
UPBIT_SECRET_KEY=your_upbit_secret_key

# ===================================================================
# NOTIFICATION SERVICES (Optional)
# ===================================================================
# Slack webhook for alerts and notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email for system alerts
ALERT_EMAIL=alerts@yourdomain.com

# ===================================================================
# RATE LIMITING CONFIGURATION
# ===================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================================================
# CACHE SETTINGS
# ===================================================================
CACHE_TTL=3600

# ===================================================================
# DEVELOPMENT TOOLS
# ===================================================================
# Enable/disable specific features in development
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true
ENABLE_HELMET_SECURITY=true

# ===================================================================
# BACKUP CONFIGURATION (Optional)
# ===================================================================
# S3 configuration for database backups
BACKUP_S3_BUCKET=fg-index-backups-dev
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# ===================================================================
# SSL/TLS CONFIGURATION (Production-like testing)
# ===================================================================
# Only needed if testing with SSL locally
CERTBOT_EMAIL=dev@yourdomain.com

# ===================================================================
# MONITORING (Optional)
# ===================================================================
# Enable metrics collection in development
ENABLE_METRICS=true
METRICS_PORT=9090
