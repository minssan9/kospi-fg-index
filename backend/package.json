{
  "name": "kospi-fg-index-backend",
  "version": "1.0.0",
  "description": "KOSPI Fear & Greed Index Backend API Server",
  "main": "dist/server.js",
  "scripts": {
    "start": "dotenv -e .env -- node dist/server.js",
    "start:prod": "dotenv -e .env.production -- node dist/server.js",
    "start:scheduler": "dotenv -e .env.production -- node -r ts-node/register -e \"require('./src/services/scheduler').startDataCollectionScheduler()\"",
    "start:batch-worker": "dotenv -e .env.production -- node -r ts-node/register -e \"require('./src/services/batchWorker').startBatchWorker()\"",
    "dev": "dotenv -e .env -- nodemon src/server.ts",
    "build": "tsc",
    "build:prod": "dotenv -e .env.production -- tsc",
    "test": "dotenv -e .env -- jest",
    "test:watch": "dotenv -e .env -- jest --watch",
    "test:coverage": "dotenv -e .env -- jest --coverage",
    "test:simple": "dotenv -e .env -- npx ts-node src/test/simpleTest.ts",
    "test:basic": "dotenv -e .env -- node -r ts-node/register src/test/simpleTest.js",
    "test:collectors": "dotenv -e .env -- node -r ts-node/register src/test/testCollectors.ts",
    "test:system": "dotenv -e .env -- node -r ts-node/register src/test/systemTest.ts",
    "collect:data": "dotenv -e .env -- npx ts-node -e \"import('./src/services/scheduler').then(m => m.collectDailyData())\"",
    "collect:historical": "dotenv -e .env -- npx ts-node -e \"import('./src/services/scheduler').then(m => m.collectHistoricalData('2025-01-16', '2025-01-31'))\"",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate deploy",
    "db:seed": "npx ts-node prisma/seed.ts",
    "docker:build": "docker build -t kospi-fg-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production kospi-fg-backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "kospi",
    "fear-greed-index",
    "stock-market",
    "api",
    "typescript",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.9.0",
    "cheerio": "^1.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.0.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "prisma": "^5.7.1",
    "rate-limiter-flexible": "^4.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
